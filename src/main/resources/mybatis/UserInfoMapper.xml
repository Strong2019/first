<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kingland.intern.mapper.UserInfoMapper">
    <resultMap id="BaseResultMap" type="com.kingland.intern.domain.UserInfo">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
    </resultMap>
    <sql id="Base_Column_List">
        user_id, username, "password"
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from intern.user_info
        where user_id = #{userId}
    </select>
    <select id="queryUserByName" resultType="com.kingland.intern.domain.UserInfo">
        select
        <include refid="Base_Column_List"/>
        from intern.user_info
        where username = #{username}
    </select>
    <select id="queryRolesByUserId" resultType="com.kingland.intern.domain.Role">
        select rr.role_id, rr.role_name from intern.relation_user_role rl
        left join intern.role rr
        on rl.role_id = rr.role_id
        where user_id = #{userId}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from intern.user_info
        where user_id = #{userId}
    </delete>
    <insert id="insert" keyColumn="user_id" keyProperty="userId" parameterType="com.kingland.intern.domain.UserInfo"
            useGeneratedKeys="true">
        insert into intern.user_info (username, "password")
        values (#{username}, #{password})
    </insert>
    <insert id="insertSelective" keyColumn="user_id" keyProperty="userId"
            parameterType="com.kingland.intern.domain.UserInfo" useGeneratedKeys="true">
        insert into intern.user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">username,</if>
            <if test="password != null">"password",</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.kingland.intern.domain.UserInfo">
        update intern.user_info
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">"password" = #{password},</if>
        </set>
        where user_id = #{userId}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.kingland.intern.domain.UserInfo">
        update intern.user_info
        set username = #{username},
        "password" = #{password}
        where user_id = #{userId}
    </update>
</mapper>