<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kingland.intern.mapper.UserMapper">

  <select id="queryUserByName" resultType="com.kingland.intern.domain.User">
    select * from dhrm2193.user_info where username = #{username}
  </select>

  <insert id="addUser" parameterType="com.kingland.intern.domain.User">
    insert into dhrm2193.user_info(username,password,role,description) values(#{username},#{password},#{role},#{description})
  </insert>

</mapper>